<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingBottom="@dimen/activity_vertical_margin"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              tools:context="com.wci.android.ballistaibeacondemo.activities.IntroActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_weight="3"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="42sp"/>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/intro_img_connection"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:alpha="0"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/wifi"
            android:tint="@color/accent"/>

        <ImageView
            android:id="@+id/intro_img_bt_services"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:alpha="0"
            android:padding="20dp"
            android:src="@drawable/bluetooth"
            android:tint="@color/accent"/>

        <ImageView
            android:id="@+id/intro_img_ok"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_weight="1"
            android:alpha="0"
            android:maxHeight="96dp"
            android:maxWidth="96dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/success_512"
            android:tint="@color/accent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/intro_btn_next"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:alpha="0"
            android:padding="@dimen/activity_horizontal_margin"
            android:src="@drawable/right_round"
            android:tint="@color/accent"/>
    </LinearLayout>

</LinearLayout>
